<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.restaurantroulette.app.lewisrhine.restaurantroulette.ThePickFragment">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#ff4a4a4a"
        android:id="@+id/pick_image"
        android:layout_margin="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Test"
        android:id="@+id/pick_name"
        android:layout_toEndOf="@id/pick_image"
        android:layout_toRightOf="@id/pick_image"
        android:layout_centerVertical="true"/>



</RelativeLayout>
